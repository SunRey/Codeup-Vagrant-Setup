# redirect www to non-www
server {
  server_name www.{{ domain }};
  return 301 $scheme://{{ domain }}$request_uri;
}

server {
  server_name {{ domain }};
  root {{ www_home }}/{{ domain }}/public;

  {% if warpspeed_root is defined and warpspeed_root != "" %}
      # WarpSpeed.io auto-manages the following section.
      # Editing or moving any of these lines will break functionality.

      ############################
      # START DO-NOT-EDIT-BLOCK
      ############################

      listen 80; # LISTEN PORT MARKER

      # SSL PLACEHOLDERS
      # ssl on;
      # ssl_certificate certificate-path;
      # ssl_certificate_key key-path;

      ############################
      # END DO-NOT-EDIT-BLOCK
      ############################
  {% endif %}

  access_log  /var/log/nginx/{{ domain }}-access.log;
  error_log  /var/log/nginx/{{ domain }}-error.log;

  include /etc/nginx/includes/location.conf;

  location / {
    try_files $uri $uri/ /index.php?$args;
    {% if inventory_hostname == 'vagrant' -%}
      autoindex on;
    {%- endif %}

  }

  # pass all .php files to php-fpm
  location ~ \.php$ {
    try_files $uri =404;
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    include fastcgi_params;
    fastcgi_index index.php;
    fastcgi_pass unix:/var/run/php5-fpm-{{ domain }}.sock;
  }
}
